
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Company {
  id        String   @id @default(cuid())
  name      String
  website   String?
  industry  String?
  country   String?
  size      String?  // e.g., "1-10", "11-50", "51-200", etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  contacts  Contact[]
  leads     Lead[]

  @@map("companies")
}

model Contact {
  id        String   @id @default(cuid())
  firstName String?
  lastName  String?
  email     String
  phone     String?
  role      String?  // job title/role
  companyId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  company   Company? @relation(fields: [companyId], references: [id])
  leads     Lead[]

  @@index([email])
  @@map("contacts")
}

model Lead {
  id          String   @id @default(cuid())
  email       String
  firstName   String?
  lastName    String?
  company     String?  // Keep for backward compatibility
  phone       String?
  country     String?
  status      String   @default("new")
  score       Int      @default(0)
  source      String?
  companyId   String?
  contactId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  companyRel  Company? @relation(fields: [companyId], references: [id])
  contactRel  Contact? @relation(fields: [contactId], references: [id])

  @@index([email])
  @@index([status])
  @@map("leads")
}
