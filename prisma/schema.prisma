generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Phase 4: Lead Management
  assignedLeads Lead[]     @relation("AssignedLeads")
  notes         LeadNote[] @relation("UserNotes")

  // Phase 5B: Outreach
  createdOutreachDrafts  OutreachDraft[] @relation("CreatedOutreachDrafts")
  approvedOutreachDrafts OutreachDraft[] @relation("ApprovedOutreachDrafts")

  @@map("users")
}

model Company {
  id       String  @id @default(cuid())
  name     String
  website  String?
  industry String?
  country  String?
  size     String? // e.g., "1-10", "11-50", "51-200", etc.

  // Lead scoring fields (Phase 5)
  score        Int   @default(0)
  scoreFactors Json? // stores scoring reasons/metadata

  // External enrichment fields (Phase 6)
  enrichmentStatus  String? // "never", "pending", "success", "failed"
  enrichmentLastRun DateTime?
  enrichmentData    Json? // Stores structured enrichment results from Google CSE

  // Discovery metadata fields (Phase 1)
  discoveryMetadata Json? // Stores discovery metadata (source, timestamp, method, etc.)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contacts Contact[]
  leads    Lead[]    @relation("CompanyLeads")

  @@map("companies")
}

model Contact {
  id                String   @id @default(cuid())
  firstName         String?
  lastName          String?
  email             String?
  phone             String?
  role              String? // job title/role
  companyId         String?
  linkedInUrl       String? // LinkedIn profile URL (from discovery)
  discoveryMetadata Json? // Stores discovery metadata (source, timestamp, method, etc.)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  company Company? @relation(fields: [companyId], references: [id])
  leads   Lead[]   @relation("ContactLeads")

  @@index([email])
  @@index([linkedInUrl])
  @@map("contacts")
}

model Lead {
  id                String    @id @default(cuid())
  email             String
  firstName         String?
  lastName          String?
  company           String? // Keep for backward compatibility
  phone             String?
  country           String?
  status            String    @default("new")
  score             Int       @default(0)
  scoreFactors      Json? // stores scoring reasons/metadata
  classification    String? // Lead classification: "hot", "warm", "cold"
  scoredAt          DateTime? // Timestamp when score was last calculated
  source            String? // Lead source (can be discovery channel type: "google", "keyword", "linkedin", "social")
  businessSource    String? // Business/acquisition source: "referral", "existing_customer", "partner", "inbound", "outbound", etc.
  companyId         String?
  contactId         String?
  discoveryMetadata Json? // Stores discovery metadata (source, timestamp, method, etc.)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  companyRel Company? @relation("CompanyLeads", fields: [companyId], references: [id])
  contactRel Contact? @relation("ContactLeads", fields: [contactId], references: [id])

  // Phase 4: Lead Management
  assignedToId String?
  assignedTo   User?      @relation("AssignedLeads", fields: [assignedToId], references: [id], onDelete: SetNull)
  notes        LeadNote[] @relation("LeadNotes")

  // Phase 5B: Outreach
  outreachDrafts OutreachDraft[]

  @@index([email])
  @@index([status])
  @@index([businessSource])
  @@index([assignedToId])
  @@map("leads")
}

model ImportJob {
  id           String    @id @default(cuid())
  type         String // "company", "contact", "lead"
  filename     String
  rowsIn       Int       @default(0)
  rowsSuccess  Int       @default(0)
  rowsError    Int       @default(0)
  status       String    @default("pending") // "pending", "running", "completed", "failed"
  createdAt    DateTime  @default(now())
  finishedAt   DateTime?
  errorMessage String?

  @@index([status])
  @@index([createdAt])
  @@map("import_jobs")
}

model LeadNote {
  id        String   @id @default(cuid())
  leadId    String
  userId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lead Lead @relation("LeadNotes", fields: [leadId], references: [id], onDelete: Cascade)
  user User @relation("UserNotes", fields: [userId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([userId])
  @@index([createdAt])
  @@map("lead_notes")
}

// Phase 5A: Discovery Run Tracking
model DiscoveryRun {
  id        String   @id @default(cuid())

  // Timing
  startedAt  DateTime  @default(now())
  finishedAt DateTime?

  // Status: pending, running, completed, failed, cancelled
  status String @default("pending")

  // Mode: daily, manual, test
  mode   String @default("daily")
  dryRun Boolean @default(false)

  // Intent used for this run (null for legacy/daily runs)
  intentId   String? // e.g., "referral_ecosystem_prospects"
  intentName String? // Human-readable name for display

  // Who/what triggered this run
  triggeredBy   String? // "cron", "manual", "test-script"
  triggeredById String? // User ID if manually triggered

  // Results (JSON for flexibility)
  stats Json?
  error String? @db.Text

  // Stored discovery results (after dedupe) for UI display
  // Capped to maxCompanies/maxLeads limits, safe JSON (no secrets)
  resultsJson Json? // Array of DiscoveryResult objects (after dedupe)

  // Denormalized counts for quick queries
  createdCompaniesCount Int @default(0)
  createdContactsCount  Int @default(0)
  createdLeadsCount     Int @default(0)
  skippedCount          Int @default(0)
  errorCount            Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([startedAt])
  @@index([mode])
  @@index([intentId])
  @@map("discovery_runs")
}

// Phase 5B: Assisted Outreach
model OutreachPlaybook {
  id              String   @id @default(cuid())
  name            String
  audienceType    String   // e.g., "agencies", "schools", "businesses", "events", "tenders"
  subjectTemplate String?  // Optional subject line template
  bodyTemplate    String   // Body template with {{variable}} placeholders
  variablesSchema Json?    // JSON schema describing available variables
  enabled         Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  drafts OutreachDraft[]

  @@index([enabled])
  @@index([audienceType])
  @@map("outreach_playbooks")
}

model OutreachDraft {
  id              String   @id @default(cuid())
  leadId          String
  playbookId      String
  channel         String   @default("email") // "email", "whatsapp", "linkedin_manual"
  subject         String?  // Generated/edited subject
  body            String   // Generated/edited body
  status          String   @default("draft") // "draft", "approved", "sent", "cancelled", "failed"
  metadataJson    Json?    // Stores missingFields, warnings, etc.
  createdByUserId String
  approvedByUserId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  lead     Lead            @relation(fields: [leadId], references: [id], onDelete: Cascade)
  playbook OutreachPlaybook @relation(fields: [playbookId], references: [id], onDelete: Restrict)
  createdBy User            @relation("CreatedOutreachDrafts", fields: [createdByUserId], references: [id], onDelete: Restrict)
  approvedBy User?          @relation("ApprovedOutreachDrafts", fields: [approvedByUserId], references: [id], onDelete: SetNull)

  @@index([leadId])
  @@index([playbookId])
  @@index([status])
  @@index([createdByUserId])
  @@index([createdAt])
  @@map("outreach_drafts")
}

model SuppressionEntry {
  id        String   @id @default(cuid())
  type      String   // "email", "domain", "company"
  value     String   // The email/domain/company name to suppress
  reason    String?  // Optional reason for suppression
  createdAt DateTime @default(now())

  @@unique([type, value], name: "type_value")
  @@index([type])
  @@index([value])
  @@map("suppression_entries")
}

model OutboundMessageLog {
  id               String   @id @default(cuid())
  leadId           String
  channel          String   // "email", "whatsapp", "linkedin_manual"
  providerMessageId String? // External provider's message ID (if applicable)
  to               String   // Recipient email/phone/etc
  subject          String?  // Message subject (if applicable)
  bodyPreview      String   // First 200 chars of body for logging
  status           String   // "sent", "failed", "pending"
  error            String?  // Error message if failed
  createdAt        DateTime @default(now())

  @@index([leadId])
  @@index([channel])
  @@index([status])
  @@index([createdAt])
  @@map("outbound_message_logs")
}
