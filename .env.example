
# Database connection string (Neon PostgreSQL, required)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# The base URL for NextAuth callbacks (must match your dev/prod URL)
NEXTAUTH_URL="http://localhost:3000"

# Secret for NextAuth session encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Trust host header (set to 'true' for local dev, may be required for Vercel)
AUTH_TRUST_HOST="true"
